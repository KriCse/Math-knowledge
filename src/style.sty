% Commands
\newcommand{\apilink}[2]{
   \colorbox{light-gray}{\texttt{#1}}
    (\href{#2}{API link})
}
\newcommand{\determinant}[1]{
    \det \left( #1 \right)
}
\newcommand{\setb}[2]{
\{#1 \mid #2 \}
}

% Counter
\newcounter{example}[subsubsection]

% Enviroments

\newenvironment{example}[1][\unskip]{
    \refstepcounter{example}
    \textcolor{Blue}{
    \subsubsection{Example \theexample:}}#1 
    \vspace{0.1ex} 
}{
}

